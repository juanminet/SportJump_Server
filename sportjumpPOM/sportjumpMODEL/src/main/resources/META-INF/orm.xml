<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="1.0" xmlns="http://java.sun.com/xml/ns/persistence/orm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd">
	
	
	<!-- Coach -->
	 <named-query name="findAllCoaches">
		<query>from Coach</query>
	</named-query>
	<named-query name="findCoachByUserName">
		<query>from Coach c where c.userName = :userName</query>
	</named-query> 
	<named-query name="findCoachByDni">
		<query>from Coach c where c.dni = :dni</query>
	</named-query>
		
	
	<!-- Team -->
	 <named-query name="findAllTeams">
		<query>from Team</query>
	</named-query>	
	<named-query name="findAllTeamsByCoach">
		<query>from Team t where t.coach.idUser = :idCoach</query>
	</named-query>
	<!-- <named-query name="findTeamByName">
		<query>from Team t inner join t.coach c where t.name = :name and c.idUser := idCoach</query>
	</named-query> -->
	
	
	
	<!-- Athlete -->
	<named-query name="findAllAthletes">
		<query>from Athlete</query>
	</named-query>
	<named-query name="findAthleteByUserName">
		<query>from Athlete a where a.userName = :userName</query>
	</named-query>
	<named-query name="findAthleteByDni">
		<query>from Athlete a where a.dni = :dni</query>
	</named-query>
	<named-query name="findAthleteFromTeam">
		<query>from Athlete a where a.team.idTeam = :idTeam</query>
	</named-query>
	<named-query name="findAthleteFromCoach">
		<query>from Athlete a where a.team.coach.idUser = :idCoach</query>
	</named-query>
	
	
	<!-- Exercises -->
 	<named-query name="findAllExerciseBlock">
	    <query>from ExerciseBlock</query>
	</named-query>
	
	<named-query name="findAllExerciseBlockByCoach">
	    <query>from ExerciseBlock e where e.coach.idUser = :idUser</query>
	</named-query>
	
	<named-query name="findAllExercise">
	    <query>from Exercise</query>
	</named-query> 
	
	<named-query name="findAllExerciseByBlock">
	    <query>from Exercise e where e.exerciseBlock.idExerciseBlock = :idBlock</query>
	</named-query>
	
	
	
	
</entity-mappings>
